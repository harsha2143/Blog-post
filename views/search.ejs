<div class="author">
    <h1 class="author_heading">Search Results</h1>
</div>

<section class="articles">
    <ul class="articles-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/Post/<%=post._id%>">
                    <span><%= post.title %></span>
                    <span class="article-list_date"><%=post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
</section>
<style>
    /* Container for the author heading */
.author {
    text-align: center;
    margin-top: 30px;
    margin-bottom: 20px;
}

.author_heading {
    font-size: 2rem;
    color: #333;
    font-weight: bold;
    border-bottom: 2px solid #4CAF50;
    display: inline-block;
    padding-bottom: 5px;
}

/* Articles section */
.articles {
    display: flex;
    justify-content: center;
    padding: 0 20px;
}

/* List styling */
.articles-ul {
    list-style: none;
    padding: 0;
    margin: 0;
    max-width: 800px;
    width: 100%;
}

/* Individual list item */
.articles-ul li {
    background-color: #ffffffb9;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
}

/* Hover effect */
.articles-ul li:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* Link styling */
.articles-ul li a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 20px;
    text-decoration: none;
    color: #333;
    font-size: 1.1rem;
    font-weight: 500;
}

/* Date styling */
.article-list_date {
    font-size: 0.9rem;
    color: #888;
    font-style: italic;
}

/* Responsive tweaks */
@media (max-width: 600px) {
    .articles-ul li a {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }

    .article-list_date {
        align-self: flex-end;
    }
}

</style>